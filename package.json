{
  "name": "@adobe/helix-status",
  "version": "10.1.5",
  "description": "Report status for OpenWhisk Microservices for Uptime checks with Pingdom or New Relic",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "c8 mocha",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "semantic-release-dry": "semantic-release --dry-run --branches $CI_BRANCH",
    "prepare": "husky"
  },
  "mocha": {
    "require": [
      "test/setup-env.js"
    ],
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json",
    "loader": "esmock"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-status.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-status/issues"
  },
  "homepage": "https://github.com/adobe/helix-status#readme",
  "dependencies": {
    "@adobe/fetch": "^4.1.10"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "2.0.9",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "c8": "10.1.3",
    "eslint": "8.57.1",
    "esmock": "2.7.0",
    "express": "5.1.0",
    "husky": "9.1.7",
    "junit-report-builder": "5.1.1",
    "lint-staged": "16.1.0",
    "mocha": "11.5.0",
    "mocha-multi-reporters": "1.5.1",
    "nock": "13.5.6",
    "semantic-release": "24.2.5",
    "supertest": "7.1.1"
  },
  "lint-staged": {
    "*.js": "eslint"
  }
}
